<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esigelec.zengyuhao.materialdesignpractice.GPSLocatorActivity">


    <ImageView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="400dp"
        android:background="@drawable/shape_rect_border"
        android:elevation="8dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/locator_blue"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/location_pin_blue" />

    <ImageView
        android:id="@+id/locator_red"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/location_pin_red" />

    <ImageView
        android:id="@+id/locator_green"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/location_pin_green" />

</RelativeLayout>
