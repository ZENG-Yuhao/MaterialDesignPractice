<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.esigelec.zengyuhao.materialdesignpractice.RippleEffectActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Default ImageView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--> Rect. shadow / translationZ anim. / no ripple"/>

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@android:color/holo_blue_dark"
        android:elevation="4dp"
        android:stateListAnimator="@animator/pressed_raise"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ImageView with normal shape"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--> Round corner shadow / translationZ anim. / no ripple"/>

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/shape_rect"
        android:elevation="4dp"
        android:stateListAnimator="@animator/pressed_raise"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ImageView with ripple shape"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--> Round corner shadow / translationZ anim. / ripple"/>

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/ripple_rect"
        android:elevation="4dp"
        android:stateListAnimator="@animator/pressed_raise"
        />
</LinearLayout>
