<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@android:color/holo_blue_light</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@android:color/holo_blue_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/holo_blue_light</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@color/background_floating_material_light</item>

        <item name="android:windowExitTransition">
            @transition/grid_exit
        </item>

        <!-- We may need this config for Transitions. This attribute will be set to true automatically if the AppTheme
        inherits already AppCompat or Material.
            ## <item name="android:windowContentTransitions">true</item> ##
        -->
        <item name="android:windowContentTransitions">true</item>
    </style>

</resources>
