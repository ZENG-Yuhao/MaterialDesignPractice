<?xml version="1.0" encoding="utf-8"?>
<resources>.
    <!-- When there are conflicts with attributes' names, what we need to do is making those attr in the common filed
    and declaring them again in the private field. Just like what I have done below. -->
    <attr name="barWidth" format="dimension|integer"/>
    <attr name="percentage" format="integer"/>
    <attr name="barColor" format="color"/>

    <declare-styleable name="CircleProgressBarView">
        <attr name="barWidth"/>
        <attr name="percentage"/>
        <attr name="barColor"/>
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="barWidth"/>
        <attr name="percentage"/>
        <attr name="barColor"/>
        <attr name="barTextSize" format="dimension"/>
    </declare-styleable>
</resources>